<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- top navigation -->
    <include layout="@layout/top_navigation" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="10">



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">

                                <Button
                                    android:id="@+id/saveinfo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/smoke_pink"
                                    android:text="Save changes"
                                    android:textColor="@color/white" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:padding="10dp"
                                    android:visibility="visible"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true">

                                    <TextView
                                        android:id="@+id/yourname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:layout_marginLeft="8dp"
                                        android:text="Your Display Name"
                                        android:textColor="@color/red"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />


                                    <EditText
                                        android:id="@+id/displayName"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:background="@android:color/transparent"
                                        android:layout_marginLeft="15dp"
                                        android:gravity="bottom"
                                        android:hint="Thitipoom Techaapaikhun" />
                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:padding="10dp"
                                    android:visibility="visible"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true">

                                    <TextView
                                        android:id="@+id/aboutme"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="10dp"
                                        android:layout_marginLeft="8dp"
                                        android:text="About Me"
                                        android:textColor="@color/red"
                                        android:textSize="18dp"
                                        android:textStyle="bold" />


                                    <EditText
                                        android:id="@+id/editabout"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:background="@android:color/transparent"
                                        android:layout_marginLeft="15dp"
                                        android:gravity="bottom"
                                        android:hint="Write something about you" />
                                </androidx.cardview.widget.CardView>


                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:visibility="visible"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:paddingLeft="10dp"
                                            android:paddingTop="10dp"
                                            android:text="Basic Information"
                                            android:textColor="@color/red"
                                            android:textSize="18dp"
                                            android:textStyle="bold" />

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">


                                            <TextView
                                                android:id="@+id/Interestedin"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_margin="8dp"
                                                android:text="Interested in"
                                                android:textSize="18dp" />

                                            <Button
                                                android:id="@+id/add1"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerVertical="true"
                                                android:text="Add"
                                                android:background="@null"
                                                android:visibility="visible" />


                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/Relaystat"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_margin="8dp"
                                                android:text="Relationship Status"
                                                android:textSize="18dp" />

                                            <Button
                                                android:id="@+id/add2"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerVertical="true"
                                                android:text="Add"
                                                android:background="@null"
                                                android:visibility="visible" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:id="@+id/seekingfor"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_margin="8dp"
                                                android:text="Seeking for"
                                                android:textSize="18dp" />

                                            <Button
                                                android:id="@+id/add3"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentEnd="true"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerVertical="true"
                                                android:text="Add"
                                                android:background="@null"
                                                android:visibility="visible" />

                                        </RelativeLayout>


                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:visibility="visible"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/interesthead"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_margin="8dp"
                                        android:text="My Interests"
                                        android:textColor="@color/red"
                                        android:textStyle="bold"
                                        android:textSize="18dp" />

                                    <EditText
                                        android:id="@+id/interests"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="@dimen/_10dp"
                                        android:background="@drawable/transparent_rounded"
                                        android:hint="  Add your interests"
                                        android:padding="10dp" />

                                    <Button
                                        android:id="@+id/add5"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="15dp"
                                        android:layout_marginBottom="5dp"
                                        android:text="Add"
                                        android:gravity="center"
                                        android:background="@color/float_transparent"/>

                                    <ListView
                                        android:id="@+id/listview"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>

                                </LinearLayout>

                                </androidx.cardview.widget.CardView>




                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>






</LinearLayout>